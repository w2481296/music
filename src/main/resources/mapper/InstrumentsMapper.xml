	<select id="selinstruByName" resultType="java.util.Map" parameterType="java.lang.String"
	useCache="false" flushCache="true">
		select
		id as id,
		ins_name as insName,
		ins_type as insType,
		ins_cost as insCost,
		ins_pricing as insPricing,
		ins_manufacturers as insManufacturers,
		ins_parts as insParts,
		ins_remake as insRemake,
		date_format(ins_time,'%Y-%c-%d %h:%i:%s') AS insTime
		from
		w_instrument_information
		<where> 1=1
			<if test="insName!=null and insName!=''">
				AND ins_name like CONCAT('%',#{insName},'%')
			</if>
			<if test="insTime1!=null and insTime1!=''">
				AND DATE_FORMAT(ins_time , '%Y-%m-%d')&gt;=#{insTime1}
			</if>
			<if test="insTime2!=null and insTime2!=''">
				AND DATE_FORMAT(ins_time , '%Y-%m-%d')&lt;=#{insTime2}
			</if>
		</where>
		group by id
	</select>
	<!-- 删除乐器 -->  
	<delete id="delMainInsById" parameterType="cn.tedu.store.bean.Instruments">  
		delete from w_instrument_information  where id= #{insid2}
	</delete> 
	<!-- 批量删除 -->
	<delete id="deletesById"  parameterType = "java.util.List">
     delete from w_instrument_information where 1>2
         or id in
      <foreach collection="list"  item="item" open="(" separator="," close=")"  >
           #{item}
      </foreach>
	</delete>
